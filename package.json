{
  "name": "canvasser",
  "version": "1.0.0",
  "description": "Simple server starter with Koa, Bull, Docker, TypeScript",
  "author": "Sang Dang",
  "license": "MIT",
  "main": "dist/server.js",
  "declaration": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:sangdth/canvasser.git"
  },
  "scripts": {
    "docker:prod": "docker-compose -f docker-compose.yml up",
    "docker:dev": "docker-compose -f docker-compose.local.yml up",
    "dev": "nodemon --watch src -e ts --exec ts-node src/server.ts",
    "compile": "tsc --project tsconfig.json",
    "lint": "eslint \"**/*.ts\" --quiet",
    "build": "yarn lint && yarn compile",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "bull": "^3.29.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.1",
    "koa-router": "^10.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "2.24.2",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
